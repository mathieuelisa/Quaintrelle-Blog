<%- include("partials/header") -%>

    <div class="container">

        <% posts.forEach((post)=>{ %>
            <H1 class="title__article">
                <%= post.title %>
            </H1>
            <p class="text__article">
                <%= post.content.substring(0,100)+ "..." %>
                    <a class="text__article--anchor" href="/posts/<%=post._id%>"> Read More </a>
            </p>
            <% }) %>

<%- include("partials/footer") -%>